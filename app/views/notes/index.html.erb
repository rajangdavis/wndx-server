<% @notes.each do |note|%>
	<span><%= link_to "#{note.description}", note_path(note) %></span><br>

	<%=link_to "#{note.username}", user_path(note.user_id)%> | <%= note.created_at.strftime("%m/%d/%Y")%> | 
